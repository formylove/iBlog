<filter>
<filter-name>url filter</filter-name>
<filter-class>main.src.filter.UrlFilter</filter-class>
</filter>
<filter-mapping>
<filter-name>url filter</filter-name>
		<url-pattern>/*</url-pattern>
	    <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
</filter-mapping>
<filter>
<filter-name>user detector</filter-name>
<filter-class>main.src.filter.UserDetectFilter</filter-class>
</filter>
<filter-mapping>
<filter-name>user detector</filter-name>
		<url-pattern>/*</url-pattern>
	    <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
</filter-mapping>
	<filter>
		<filter-name>Struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	    <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	
	<filter>
		<filter-name>testFilter</filter-name>
		<filter-class>main.src.filter.testFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>testFilter</filter-name>
		<url-pattern>/*</url-pattern>
	    <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
	</filter-mapping>


  
<filter>
<filter-name>Interceptor</filter-name>
<filter-class>main.src.filter.Interceptor</filter-class>
</filter>
<filter-mapping>
<filter-name>Interceptor</filter-name>
		<url-pattern>/*</url-pattern>
</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/pages/jsp/common/404.jsp</location>
	</error-page>
	
	<welcome-file-list>
		<welcome-file>/pages/jsp/homepage/homepage.jsp</welcome-file>
	</welcome-file-list>
	
