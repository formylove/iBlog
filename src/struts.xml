<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
          "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>


	<constant name="struts.action.extension" value="action,do,iBlog" />
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.custom.i18n.resources" value="dbinfo" />
	<constant name="struts.devMode" value="true" />


	<package name="default" extends="struts-default">


		<global-results>

			<result name="exception">/pages/jsp/runtimeExceptionPage.jsp</result>
			<result name="login">/pages/jsp/login.jsp</result>
			<result name="main">/pages/jsp/main.jsp</result>

		</global-results>
		
		<global-exception-mappings>
			<exception-mapping result="exception"
				exception="java.lang.RuntimeException" />
		</global-exception-mappings>
		

		
		<action name="commentAction" class="main.src.action.CommentAction">
			<result name="success">/pages/jsp/saved.jsp</result>
		</action>
		<action name="forwardAction" class="main.src.action.ForwardAction">
			<result name="success">/pages/jsp/saved.jsp</result>
		</action>
		




	</package>
	

		<package name="default2" extends="json-default">  
		<action name="diaryAction" class="main.src.action.DiaryAction">
			<result name="diarypage">/pages/jsp/diary.jsp</result>
			<result name="editdiary">/pages/jsp/editDiary.jsp</result>
			<result name="success">/pages/jsp/saved.jsp</result>
		</action>
		
		<action name="categoryAction" class="main.src.action.CategoryAction">
			<result name="conveycategory" type="json"></result>
		</action>
		
		<action name="imageAction" class="main.src.action.ImageAction">
			<result name="success">/pages/jsp/hi.html</result>
			<result name="test">/pages/html/x.html</result>
			<result name="croped">/pages/jsp/gallery.jsp</result>
		</action>
		
		<action name="commentAction" class="main.src.action.CommentAction">
			<result name="conveycomments" type="json"></result>
		</action>
		
	</package>

</struts>
